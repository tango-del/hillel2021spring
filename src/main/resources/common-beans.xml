<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="connectToDb" class="org.homework.dbjourneyservice.Connect" lazy-init="true">
        <constructor-arg name="URL" value="jdbc:postgresql://localhost:5432/spring_2021"/>
        <constructor-arg name="USER" value="postgres"/>
        <constructor-arg name="PASS" value="Sobik2010"/>
    </bean>

    <bean name="dbService" class="org.homework.service.DatabaseJourneyServiceImpl" lazy-init="true">
        <constructor-arg name="connect" ref="connectToDb"/>
    </bean>

</beans>