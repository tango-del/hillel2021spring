    <bean name="connectToDb" class="org.homework.dbjourneyservice.Connect" lazy-init="true">
        <constructor-arg name="URL" value="jdbc:postgresql://localhost:5432/spring_2021"/>
        <constructor-arg name="USER" value="postgres"/>
